! Big font for hi-res monitor
URxvt.font: xft:Source Code Pro:size=25
xterm*font:     *-fixed-*-*-*-28-*
!URxvt.font: xft:gallant12x22:size=25
URxvt.perl-ext-common: selection-to-clipboard,searchable-scrollback
URxvt.depth: 32

URxvt*scrollBar:  false
URxvt*saveLines:10000

! Scroll with output when at bottom,
! but stop scrolling with output if scrolled up
URxvt*scrollTtyOutput:      false
URxvt*scrollWithBuffer:     true
URxvt*scrollTtyKeypress:    true

#URxvt.keysym.C-b: searchable-scrollback:start

*color0:  #2E3436
*color1:  #a40000
*color2:  #4E9A06
*color3:  #C4A000
*color4:  #3465A4
*color5:  #75507B
*color6:  #ce5c00
*color7:  #babdb9
*color8:  #555753
*color9:  #EF2929
*color10: #8AE234
*color11: #FCE94F
*color12: #729FCF
*color13: #AD7FA8
*color14: #fcaf3e
